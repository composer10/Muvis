<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/item_cast_text_margin">

        <ImageView
            android:id="@+id/pictureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nameView"
            android:background="@color/silver"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/nameView"
            style="@style/AppTheme.Text.CastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/characterView"
            android:layout_marginLeft="@dimen/item_cast_text_margin"
            android:layout_marginRight="@dimen/item_cast_text_margin"
            android:layout_marginTop="@dimen/item_cast_text_margin"
            tools:text="Charlize Theron"/>

        <TextView
            android:id="@+id/characterView"
            style="@style/AppTheme.Text.CastCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/item_cast_text_margin"
            android:layout_marginRight="@dimen/item_cast_text_margin"
            tools:text="Furiosa"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>