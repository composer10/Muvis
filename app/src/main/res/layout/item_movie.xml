<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardUseCompatPadding="true"
    tools:layout_height="350dp"
    tools:layout_width="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/posterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/silver"
            android:src="@drawable/ic_empty_movie"/>

        <RelativeLayout
            android:id="@+id/infoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/item_movie_padding">

            <TextView
                android:id="@+id/titleView"
                style="@style/AppTheme.Text.ItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Star Wars"/>

            <TextView
                android:id="@+id/yearView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleView"
                android:textColor="@color/ash"
                android:textSize="12sp"
                tools:text="2017"/>

            <TextView
                android:id="@+id/ratingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/titleView"
                android:drawablePadding="1dp"
                android:drawableRight="@drawable/ic_grid_rating"
                android:textColor="@color/strawberry"
                android:textSize="12sp"
                tools:text="4.7"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>