<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.TransparentStatus">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Text"/>

    <style name="AppTheme.Text.ItemTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/concrete</item>
    </style>

    <style name="AppTheme.Text.EmptyView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Detail -->
    <style name="AppTheme.Detail" parent="AppTheme.NoActionBar">
        <!-- Empty for SDK_INT < 21-->
    </style>

    <style name="AppTheme.Text.AppBarExpanded">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Text.AppBarCollapsed">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Text.DetailTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/concrete</item>
    </style>

    <style name="AppTheme.Text.DetailRating">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/strawberry</item>
    </style>
    <style name="AppTheme.Text.DetailInfo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ash</item>
    </style>

</resources>
