<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.TransparentStatus">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="AppTheme.Text"/>
    <style name="AppTheme.Text.EmptyView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Movies -->
    <style name="AppTheme.Text.MovieTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/concrete</item>
    </style>
    <style name="AppTheme.Text.MovieYear">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/ash</item>
    </style>
    <style name="AppTheme.Text.MovieRating">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/strawberry</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/ic_movie_rating</item>
        <item name="android:drawablePadding">1dp</item>
    </style>


    <!-- Detail -->
    <style name="AppTheme.Detail" parent="AppTheme.NoActionBar">
        <!-- Empty for SDK_INT < 21-->
    </style>
    <style name="AppTheme.Text.AppBarExpanded">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.Text.AppBarCollapsed">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Text.DetailTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/concrete</item>
    </style>
    <style name="AppTheme.Text.DetailRating">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/strawberry</item>
    </style>
    <style name="AppTheme.Text.DetailInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ash</item>
    </style>
    <style name="AppTheme.Text.DetailDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="AppTheme.Text.CastName">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/concrete</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="AppTheme.Text.CastCharacter">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ash</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!-- Favorites -->
    <style name="AppTheme.Text.FavoriteTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/concrete</item>
    </style>
    <style name="AppTheme.Text.FavoriteRating">
        <item name="android:drawableLeft">@drawable/ic_favorite_rating</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/strawberry</item>
    </style>
    <style name="AppTheme.Text.FavoriteInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ash</item>
    </style>
    <style name="AppTheme.Text.FavoriteGenres">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ash</item>
    </style>


</resources>
